<Page x:Class="College_Yakovenko.View.Pages.Report1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:College_Yakovenko.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Report1Page">

    <Grid Background="LightYellow" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
    
  
        <TextBlock Text="Выберите начало периода"/>
        <TextBlock Text="Выберите группу" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <TextBlock Text="Выберите конец периода" Grid.Column="2"  VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20"/>

        <DatePicker  Name="DateStartDp"  Grid.Row="1" Width="200"/>
        <DatePicker Name="DateFinishDp"  Grid.Column="2" Width="200" Grid.Row="1"/>

        <ComboBox x:Name="TakeCmb" Grid.Column="2" Grid.Row="2" Width="300" Height="50" Margin="0 5 0 5"/>

        <DataGrid Grid.Row="5" Grid.ColumnSpan="3" AutoGenerateColumns="False" Name="ReportDG">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Date_event, StringFormat=dd.MM.yyyy}" Header="Дата"/>
                <DataGridTextColumn Binding="{Binding Group.Name}" Header="Группа"/>
                <DataGridTextColumn Binding="{Binding Group.Special.Name}" Header="Специальность"/>
                <DataGridTextColumn Binding="{Binding Activity.Name}" Header="Активность"/>
                <DataGridTextColumn Binding="{Binding Activity.Direction.Name}" Header="Направленние"/>
                <DataGridTextColumn Binding="{Binding Mark}" Header="Балл"/>
            </DataGrid.Columns>


            <Button Name="SelectBtn" Grid.Row="8" Width="200" Height="60" Content="Выбрать" Margin="5" Click="SelectBtn_Click"/>
        </DataGrid>
    </Grid>
</Page>

