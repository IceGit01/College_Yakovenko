<Page x:Class="College_Yakovenko.View.Pages.Report2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:College_Yakovenko.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1100"
      Title="Report2Page">

    <Grid Background="LightYellow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" Text="Выберите начало периода"/>
        <TextBlock Text="Выберите конец периода" Grid.Column="2"  VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="30"/>
        <DatePicker  Name="DateStartDp"  Grid.Row="1" Width="200"/>
        <DatePicker Name="DateFinishDp"  Grid.Column="2" Width="200" Grid.Row="1"/>
        <DataGrid Name="ReportDG" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3" SelectionChanged="ReportDG_SelectionChanged"/>
        <Button Name="UpdateReportBtn" Grid.Row="5" Grid.Column="3" Content="Сформировать скрипты" FontSize="30"/>
    </Grid>
</Page>
